<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1EDED">

    <ScrollView
        android:id="@+id/profileTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@color/colorPrimaryDark">
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:layout_marginTop="100dp">

                <ImageView
                    android:id="@+id/avatarIv"
                    android:src="@drawable/ic_default_img_white"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:padding="5dp"
                    android:background="@color/colorPrimary"
                    android:layout_width="120dp"
                    android:layout_height="120dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/nameTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:textSize="25sp"
                            android:textColor="@color/colorWhite"
                            android:text="-"
                            android:textStyle="bold"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/districtTv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:textColor="@color/colorWhite"
                                android:text="-"
                                android:textSize="17sp"
                                android:layout_marginRight="10dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:textColor="@color/colorWhite"
                                android:text="/"
                                android:textSize="17sp"
                                android:layout_marginRight="10dp"/>
                            <TextView
                                android:id="@+id/addressTv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:textColor="@color/colorWhite"
                                android:text="-"
                                android:textSize="15sp"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/userTypeTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="-"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorWhite"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <Button
                        android:id="@+id/sendMessageBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Send Message"
                        android:padding="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"/>
<!--                    <Button-->
<!--                        android:id="@+id/rateProfileBtn"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:padding="10dp"-->
<!--                        android:layout_marginTop="5dp"-->
<!--                        android:layout_marginLeft="10dp"-->
<!--                        android:layout_marginRight="10dp"-->
<!--                        android:text="Rate Profile"/>-->
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/userProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileTop">
        <RelativeLayout
            android:id="@+id/scheduleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Schedule"
                android:textSize="25sp"
                android:gravity="center"
                android:textStyle="bold"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/scheduleTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scheduleTv">
            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@drawable/border"
                android:stretchColumns="1"
                android:layout_margin="10dp">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Departure"
                        android:layout_column="1"
                        android:textSize="23sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="Return"
                        android:layout_column="2"
                        android:textSize="23sp"
                        android:textStyle="bold"/>
                </TableRow>
                <TableRow
                    android:id="@+id/rowMonday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="50dp"
                        android:text="Monday"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/mondayDepTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textSize="17sp"
                        android:paddingLeft="15dp" />
                    <TextView
                        android:id="@+id/mondayRetTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textSize="17sp"
                        android:paddingLeft="15dp"/>
                </TableRow>
                <TableRow
                    android:id="@+id/rowTuesday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="50dp"
                        android:text="Tuesday"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/tuesdayDepTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textSize="17sp"
                        android:paddingLeft="15dp"/>
                    <TextView
                        android:id="@+id/tuesdayRetTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textSize="17sp"
                        android:paddingLeft="15dp"/>
                </TableRow>
                <TableRow
                    android:id="@+id/rowWednesday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="50dp"
                        android:text="Wednesday"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/wednesdayDepTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textSize="17sp"
                        android:paddingLeft="15dp"/>
                    <TextView
                        android:id="@+id/wednesdayRetTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textSize="17sp"
                        android:paddingLeft="15dp"/>
                </TableRow>
                <TableRow
                    android:id="@+id/rowThursday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="50dp"
                        android:text="Thursday"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/thursdayDepTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textSize="17sp"
                        android:paddingLeft="15dp"/>
                    <TextView
                        android:id="@+id/thursdayRetTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textSize="17sp"
                        android:paddingLeft="15dp"/>
                </TableRow>
                <TableRow
                    android:id="@+id/rowFriday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="50dp"
                        android:text="Friday"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/fridayDepTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textSize="17sp"
                        android:paddingLeft="15dp"/>
                    <TextView
                        android:id="@+id/fridayRetTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textSize="17sp"
                        android:paddingLeft="15dp"/>
                </TableRow>
            </TableLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
